<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivCircular"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:src="@drawable/banderanazi"

        app:layout_constraintBottom_toBottomOf="@+id/sivCircular2"
        app:layout_constraintStart_toEndOf="@+id/sivCircular2"
        app:layout_constraintTop_toTopOf="@+id/sivCircular2"
        app:shapeAppearanceOverlay="@style/Circular" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivCircular2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:src="@drawable/banderanazi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="@color/black"
        app:strokeWidth="12dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivCircular3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/banderanazi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sivCircular2"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/Bordeado" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivCircular4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/banderanazi"
        app:layout_constraintBottom_toBottomOf="@+id/sivCircular3"
        app:layout_constraintStart_toEndOf="@+id/sivCircular3"
        app:layout_constraintTop_toTopOf="@+id/sivCircular3"
        app:shapeAppearanceOverlay="@style/cornerCut" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="409dp"
        android:layout_height="313dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sivCircular3"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>